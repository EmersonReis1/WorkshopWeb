<div class="limiter">
    <div class="container-login100" style="background-image: url('~/images/bg-01.jpg');">
        <div class="wrap-login100">
            <form class="login100-form validate-form" method="post">
                <div asp-validation-summary="All"></div>

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <span class="login100-form-logo">
                    <i class="fa fa-key"></i>
                </span>

                <span class="login100-form-title p-b-34 p-t-27" style="font-size:20px">
                    Reset Password
                </span>

                <div class="text-success">
                    <p style="font-size:15px; color: white ; padding-top: 15px">
                        @ViewBag.Message
                    </p>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input asp-for="Password" class="input100" type="password" placeholder="Password">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Confirm your password">
                    <input asp-for="ConfirmPassword" class="input100" type="password" placeholder="Confirm Password">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" value="Recover Password" class="login100-form-btn">
                        Save
                    </button>
                </div>


            </form>

        </div>
    </div>
</div>

